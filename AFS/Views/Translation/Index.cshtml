@model AFS.Models.TranslationViewModel

@{
    ViewData["Title"] = "Translation";
}

<h1>Fun translation</h1>

<form method="post" action="/Translation/Index">
    <div class="div-style">
        <label for="text">Text to translate</label>
        <input type="text" id="text" name="text" required />
    </div>
    <div class="containerz div-style">
        <label for="translationType">Translation type</label>
        <select typeof="text" id="translationType" name="translationType">
            @if (Model.TranslationTypes != null)
            {
                <option value="leetspeak">leetspeak</option>
                @foreach (var type in Model.TranslationTypes)
                {
                    <option value="@type">@type</option>
                }
            }
        </select>
        <button class="custom" type="submit">Translate</button>
    </div>
</form>

@if (Model != null && !string.IsNullOrEmpty(Model.TranslatedText))
{
    <div class="div-style">
        <h2>Translated Text:</h2>
        <p>@Model.TranslatedText</p>
    </div>
}

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="text-danger">@ViewBag.ErrorMessage</div>
}
